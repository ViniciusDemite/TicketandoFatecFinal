@model InterTicketandoFatec.Models.Usuario

@{
    ViewBag.Title = "UsuarioUpdate";
    Layout = "~/Views/Layout/_LayoutPadrao.cshtml";
}

<div class="col-lg-6 col-sm-8 col-xs-12 offset-md-3">

    <br /><br /><br /><br /><br /><br /> <!-- <Espaçamento> -->

    <!-- <Formulário> -->
    <form action="/Usuario/UsuarioCreate" method="post">

        <input type="hidden" name="ID" value="@Model.ID" /> <!-- <Campo escondido do ID> -->

        <!-- <Campo - RG> -->
        <div class="form-group">
            <label> RG </label>
            <input type="text" name="RG" class="form-control" value="@Model.RG" />
        </div>
        <!-- </Campo - RG> -->

        <br />

        <!-- <Campo - RA> -->
        <div class="form-group">
            <label> RA </label>
            <input type="text" name="RA" class="form-control" value="@Model.RA" />
        </div>
        <!-- </Campo - RA> -->

        <br />

        <!-- <Campo - Curso> -->
        <div class="form-group">
            <label> Curso </label>
            <input type="text" class="form-group" name="Curso" value="@Model.Curso" />
        </div>
        <!-- </Campo - Curso> -->

        <br />

        <!-- <Campo - Email> -->
        <div class="form-group">
            <label> E-mail </label>
            <input type="email" name="Email" class="form-control" value="@Model.Email" />
        </div>
        <!-- </Campo- Email> -->

        <br />

        <!-- <Campo - Nome> -->
        <div class="form-group">
            <label> Nome </label>
            <input type="text" name="Nome" class="form-control" value="@Model.Nome" />
        </div>
        <!-- </Campo - Nome> -->

        <br />

        <!-- <Campo - Login> -->
        <div class="form-group">
            <label> Login </label>
            <input type="text" name="Login" class="form-control" value="@Model.Login" />
        </div>
        <!-- </Campo - Login> -->

        <br />

        <!-- <Campo - Senha> -->
        <div class="form-group">
            <label> Senha </label>
            <input type="password" name="Senha" class="form-control" value="@Model.Senha" />
        </div>
        <!-- </Campo - Senha> -->

        <br />

        <!-- <Botões> -->
        <div class="row">
            <div class="col">
                <button class="btn btn-dark-green" type="submit"> Salvar </button>
            </div>

            <div class="col">
                <button class="btn btn-mdb-color" type="reset"> Limpar </button>
            </div>

            <div class="row col">
                <a class="btn btn-elegant" href="/Atividade/Home"> Voltar </a>
            </div>
        </div>
        <!-- </Botões> -->
    </form>
    <!-- </Formulário> -->
</div>